<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_workout_list"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/set01_ex01"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            >
            <com.example.utils.MSPTextViewBold
                android:id="@+id/tv_workout_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:text= "@string/place_holder_exercise_name"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/text_size_normal" />

            <com.example.utils.MSPTextView
                android:id="@+id/tv_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:text= "@string/place_holder_exercise_time"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
